@model VisitorModelDto
@{
    ViewData["Title"] = "Add Visitor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">

      <div class="col-xl">
                  <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                      <h5 class="mb-0">Add New Visitor</h5>
                    </div>
                    <div class="card-body">
                      <form method="post">
                        <div class="mb-3">
                          <div class="input-group input-group-merge">
                            <span id="basic-icon-default-fullname2" class="input-group-text"
                              ><i class="fas fa-user"></i></span>
                            <input
                              asp-for="Name"
                              type="text"
                              class="form-control"
                              id="basic-icon-default-fullname"
                              placeholder="name"
                              aria-describedby="basic-icon-default-fullname2"
                            />
                          </div>
                                <span asp-validation-for="Name" style="color:darkred"></span>
                        </div>
                  
                            <div class="mb-3">
                          <div class="input-group input-group-merge">
                            <span id="basic-icon-default-fullname2" class="input-group-text"
                              ><i class="fas fa-user"></i></span>
                            <input
                              asp-for="Surname"
                              type="text"
                              class="form-control"
                              id="basic-icon-default-fullname"
                              placeholder="surname"
                              aria-describedby="basic-icon-default-fullname2"
                            />
                          </div>
                                <span asp-validation-for="Surname" style="color:darkred"></span>
                        </div>
                  
                            <div class="mb-3">
                          <div class="input-group input-group-merge">
                            <span id="basic-icon-default-fullname2" class="input-group-text"
                              ><i class="fas fa-building"></i></span>
                            <input
                              asp-for="City"
                              type="text"
                              class="form-control"
                              id="basic-icon-default-fullname"
                              placeholder="city"
                              aria-describedby="basic-icon-default-fullname2"
                            />
                          </div>
                            <span asp-validation-for="City" style="color:darkred"></span>
                        </div>
                      
                                 <div class="mb-3">
                          <div class="input-group input-group-merge">
                            <span id="basic-icon-default-fullname2" class="input-group-text"
                              ><i class="fas fa-globe"></i></span>
                            <input
                              asp-for="Country"
                              type="text"
                              class="form-control"
                              id="basic-icon-default-fullname"
                              placeholder="country"
                              aria-describedby="basic-icon-default-fullname2"
                            />
                          </div>
                                    <span asp-validation-for="Country" style="color:darkred"></span>
                        </div>
              
                                 <div class="mb-3">
                          <div class="input-group input-group-merge">
                            <span id="basic-icon-default-fullname2" class="input-group-text"
                              ><i class="fas fa-at"></i></span>
                            <input
                              asp-for="Mail"
                              type="text"
                              class="form-control"
                              id="basic-icon-default-fullname"
                              placeholder="mail"
                              aria-describedby="basic-icon-default-fullname2"
                            />
                          </div>
                             <span asp-validation-for="Mail" style="color:darkred"></span>
                        </div>
                     

                        <button type="submit" class="btn btn-primary">Add</button>
                      </form>
                    </div>
                  </div>
                </div>

</div>

