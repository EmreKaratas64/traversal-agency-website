@model List<VisitorModelDto>
@{
    ViewData["Title"] = "Visitors List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

 <div class="card">
        <h5 class="card-header">Visitors by API</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
            <thead class="table-dark">
                <tr>
                <th>#</th>
                <th>Name</th>
                <th>Surname</th>
                <th>City</th>
                <th>Country</th>
                <th>Mail</th>
                <th>Delete</th>
                <th>Update</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">

                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.VisitorID</th>
                        <td>@item.Name</td>
                        <td>
                            @item.Surname
                        </td>
                            <td>
                            @item.City
                        </td>
                            <td>
                            @item.Country
                        </td>
                            <td>
                            @item.Mail
                        </td>
                        <td>
                            <a href="/Admin/VisitorAPI/DeleteVisitor/@item.VisitorID" class="btn rounded-pill btn-outline-danger" onclick="return confirm('Are you sure to delete this visitor?')">
                                <i class="fas fa-trash"></i>&nbsp; Delete  
                            </a>
                         </td>

                             <td>
                            <a href="/Admin/VisitorAPI/UpdateVisitor/@item.VisitorID" class="btn rounded-pill btn-outline-warning">
                                <i class="fas fa-edit"></i>&nbsp; Update  
                            </a>
                         </td>
                    </tr>
                }
               
            </tbody>
            </table>
                 
        </div>
          <a href="/Admin/VisitorAPI/AddVisitor/" class="btn rounded-pill btn-outline-primary">
                <i class="fas fa-plus-square"></i>&nbsp; Add Visitor
            </a>
</div>
