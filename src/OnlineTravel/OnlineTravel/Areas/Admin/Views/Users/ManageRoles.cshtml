@model List<AssignRoleViewModel>
@{
    ViewData["Title"] = "Travel Online User Rolling";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


   <div class="row">

      <div class="col-xl">
                  <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                      <h5 class="mb-0">Manager User Role</h5>
                    </div>
                    <div class="card-body">
                      <form method="post">
                        <div class="mb-3">
                         <label>@ViewBag.UserNameSurname</label>
                        </div>
                        <hr />
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <div class="form-group mb-3">
                                    <input type="hidden" asp-for="@Model[i].RoleID" class="form-control" required>
                                    <input type="hidden" asp-for="@Model[i].RoleName" class="form-control" required>
                                </div>
                                <div class="form-group mb-3">
                                    <label class="font-weight-bold">Rol</label>
                                     <div class="form-check">
                                        <input class="form-check-input" type="checkbox" asp-for="@Model[i].Exists" id="defaultCheck3" />
                                        <label class="form-check-label" for="defaultCheck3"> @Model[i].RoleName </label>
                                    </div>
                                </div>
                            }
                        <button type="submit" class="btn btn-primary">Save</button>
                      </form>
                    </div>
                  </div>
                </div>

</div>
