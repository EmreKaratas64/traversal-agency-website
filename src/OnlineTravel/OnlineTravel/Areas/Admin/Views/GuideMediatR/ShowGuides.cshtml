@model List<GetGuideQueryResult>
@{
    ViewData["Title"] = "ShowGuides";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

 <div class="card">
        <h5 class="card-header">Tours</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
            <thead class="table-dark">
                <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Update</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">

                @foreach (var item in Model)
                {
                            <tr>
                        <td><i class="far fa-user fa-lg text-info me-3"></i> <strong>@item.GuideID</strong></td>
                        <td>@item.Name</td>
                        <td>
                            @item.Description
                        </td>

                         <td>
                            <a href="/Admin/GuideMediatR/GetGuide/@item.GuideID" class="btn rounded-pill btn-outline-warning">
                                <i class="fas fa-trash-restore"></i>&nbsp; Update
                            </a>
                        </td>
                    </tr>
                }
               
            </tbody>
            </table>
                 
        </div>
         <a href="/Admin/GuideMediatR/AddGuide/" class="btn rounded-pill btn-outline-info">
            <i class="fas fa-plus"></i>&nbsp; Add New Guide
        </a>
</div>

