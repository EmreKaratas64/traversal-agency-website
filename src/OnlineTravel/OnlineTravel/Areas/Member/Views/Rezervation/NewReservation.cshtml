@model ReservationAddDto
@{
    ViewData["Title"] = "Travel Online - New Reservation";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}
 <script>
        window.onload=(function () {
            alert('Your reservation will be in status of "Watining for payment" at first.Do not forget to check "My Reservations" menu for approval process.');
        });
</script>


<div class="container">
    <div class="row">
        <div class="col-12">
            <h3 class="text-center">New Reservation</h3>
            <br />
            <form method="post">
                <div class="form-group">
                    @Html.DropDownListFor(x=>x.DestinationID,(List<SelectListItem>)ViewBag.v,new {@class="form-control"})
                </div>

                  <div class="form-group">
                      <input type="date" asp-for="ReservationDate" class="form-control" placeholder="Number of people" />
                  </div>

                 <div class="form-group">
                      <input type="number" asp-for="PersonCount" class="form-control" placeholder="Number of people" />
                        <span asp-validation-for="PersonCount" style="color:red"></span>
                  </div>

                <div class="form-group">
                      <textarea type="text" asp-for="Description" class="form-control" placeholder="Any notes..." rows="8"></textarea>
                 <span asp-validation-for="Description" style="color:red"></span>
                  </div>
  
                <br />
                <button class="btn btn-primary"><i class="far fa-save"></i>&nbsp; Save</button>
            </form>
        </div>
    </div>
</div>
