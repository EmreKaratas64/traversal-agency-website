@model AppUser


<div class="col-12 col-xl-4">
          <div class="card h-100">
            <div class="card-header pb-0 p-3">
              <div class="row">
                <div class="col-md-8 d-flex align-items-center">
                  <h6 class="mb-0">Profile Information</h6>
                </div>
                <div class="col-md-4 text-end">
                  <a href="/Member/UserSettings/EditProfile/">
                    <i class="fas fa-user-edit text-secondary text-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit Profile"></i>
                  </a>
                </div>
              </div>
            </div>
            <div class="card-body p-3">
              <p class="text-sm">
                Hi! welcome to Travel Online user panel. You can see all of yor reservations, make new reservations, edit your profile, see our tours or contact us from left side bar. You can also reach us by mail or phone. Have a great travels with Travel Online! 
              </p>
              <hr class="horizontal gray-light my-4">
              <ul class="list-group">
                <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">Name:</strong> &nbsp; @Model.Name</li>
                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Surname:</strong> &nbsp; @Model.Surname</li>
                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Email:</strong> &nbsp; @Model.Email</li>
              </ul>
            </div>
          </div>
        </div>