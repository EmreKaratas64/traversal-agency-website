@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Html.PartialAsync("/Views/MemberLayoutPartials/MemberHeaderPartial.cshtml")

<body class="g-sidenav-show bg-gray-100">

  @await Html.PartialAsync("/Views/MemberLayoutPartials/MemberNavbarPartial.cshtml")
  
  <div class="main-content position-relative bg-gray-100 max-height-vh-100 h-100">

    @await Html.PartialAsync("/Views/MemberLayoutPartials/MemberNavbar2Partial.cshtml")
  
    <div class="container-fluid">
      <div class="page-header min-height-300 border-radius-xl mt-4" style="background-image: url('/soft-ui-dashboard/assets/img/curved-images/curved0.jpg'); background-position-y: 50%;">
        <span class="mask bg-gradient-primary opacity-6"></span>
      </div>
      <div class="card card-body blur shadow-blur mx-4 mt-n6 overflow-hidden">
        <div class="row gx-4">
         
         
         @await Component.InvokeAsync("DisplayUserInfoDashboard")

          <div class="col-lg-4 col-md-6 my-sm-auto ms-sm-auto me-sm-0 mx-auto mt-3">
            <div class="nav-wrapper position-relative end-0">
              <ul class="nav nav-pills nav-fill p-1 bg-transparent" role="tablist">
          
                <li class="nav-item">
                  <a class="nav-link mb-0 px-0 py-1 " href="/Member/UserSettings/EditProfile" role="tab" aria-selected="false">
                    <i class="fas fa-cogs"></i>&nbsp;
                    <span class="ms-1">Settings</span>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid py-4">
      @RenderBody()

      @await Html.PartialAsync("/Views/MemberLayoutPartials/MemberFooterPartial.cshtml")

    </div>
  </div>
 
  @await Html.PartialAsync("/Views/MemberLayoutPartials/MemberScriptsPartial.cshtml")
</body>

</html>